# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=<your-endpoint>
AZURE_OPENAI_API_KEY=<your-key>
AZURE_OPENAI_API_VERSION=2025-01-01-preview
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4.1

# Azure Computer Vision Configuration (for object detection)
AZURE_COMPUTER_VISION_ENDPOINT=<your-endpoint>
AZURE_COMPUTER_VISION_KEY=<your-key>

# Azure Speech Services (Optional - for enhanced speech recognition)
AZURE_SPEECH_KEY=your-speech-key-here
AZURE_SPEECH_REGION=your-region-here

# Robot Configuration
ROBOT_NAME=Anna
WAKE_WORD=hello anna
RESPONSE_TIMEOUT=10

# Vision Configuration
# Options: local, azure, hybrid, auto
DETECTION_METHOD=azure
CONFIDENCE_THRESHOLD=0.5
PREFER_LOCAL=true

# Navigation Parameters
TARGET_AREA_THRESHOLD=0.85
CENTER_TOLERANCE=0.2
MAX_NAVIGATION_TIME=30
FRAME_CHECK_INTERVAL=0.5

# Search Rotation Parameters
MAX_SEARCH_ROTATIONS=1
ROTATION_STEPS_PER_FULL_ROTATION=4
ROTATION_DURATION=0.7

# Camera Configuration
CAMERA_WIDTH=640
CAMERA_HEIGHT=480